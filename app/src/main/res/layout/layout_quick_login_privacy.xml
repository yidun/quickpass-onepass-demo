<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/yd_quick_login_privacy_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/quick_login_privacy_checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:background="@drawable/login_demo_check_cus"
            android:button="@null"
            android:checked="true"
            android:clickable="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/yd_quick_login_privacy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:lineSpacingMultiplier="1.3"
        android:text="同意 服务条款、隐私政策和服务协议"
        android:textColor="#222222"
        android:textSize="13sp" />
</LinearLayout>
